<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First CardView -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="90dp"
        android:backgroundTint="#ddd"
        app:cardCornerRadius="24dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:paddingBottom="90dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp"
                android:src="@drawable/baseline_icecream_24"
                android:background="#FF94A0"
                android:layout_marginRight="16dp"
                app:tint="#FFF6A3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mango Corn"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delicious icecream made from a perfect blend of mango and corn."
                    android:textSize="20dp"
                    android:layout_marginVertical="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Rs. 250"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#222" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_height="36dp"
                            android:src="@drawable/baseline_indeterminate_check_box_24"
                            app:tint="#444" />

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="36dp"
                            android:text="4"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#2680EB"
                            android:textColor="#fff" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="36dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_add_box_24"
                            app:tint="#444" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Duplicate CardView -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="90dp"
        android:backgroundTint="#ddd"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:paddingBottom="90dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp"
                android:src="@drawable/baseline_icecream_24"
                android:background="#FF94A0"
                android:layout_marginRight="16dp"
                app:tint="#4d2e07" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dark Choco"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you like chocolates, you are going to love this icecream."
                    android:textSize="20dp"
                    android:layout_marginVertical="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Rs. 300"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#222" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_height="36dp"
                            android:src="@drawable/baseline_indeterminate_check_box_24"
                            app:tint="#444" />

                        <TextView
                            android:id="@+id/quantity2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="36dp"
                            android:text="2"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="#2680EB"
                            android:textColor="#fff" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="36dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_add_box_24"
                            app:tint="#444" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
