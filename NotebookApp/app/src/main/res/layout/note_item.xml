<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:id="@+id/noteCard"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorDarkBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy some t-shirts for summer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorLightText"
            android:id="@+id/noteTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog."
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorLightText"
            android:id="@+id/noteContent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edited: July 21"
            android:textSize="11sp"
            android:textColor="#8B8A8A"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>